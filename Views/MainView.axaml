<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             x:Class="StadiumCompany.Views.MainView">

    <Grid Margin="30,25,30,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <ui:SymbolIcon Symbol="Library"
                                   FontSize="28"
                                   Foreground="{DynamicResource AccentBrush}"/>
                    <TextBlock x:Name="TxtTitle"
                               Text="Questionnaires"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock x:Name="LblWelcome"
                           FontSize="14"
                           Foreground="{DynamicResource TextTertiaryBrush}"
                           Margin="40,6,0,0"/>
            </StackPanel>

            <!-- User menu (top-right) -->
            <Grid Grid.Column="1" VerticalAlignment="Center">
                <Button x:Name="BtnUserMenu"
                        Background="Transparent"
                        Foreground="{DynamicResource TextSecondaryBrush}"
                        Padding="14,5"
                        CornerRadius="10"
                        Click="BtnUserMenu_Click">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock x:Name="TxtUserName"
                                   Text="Utilisateur"
                                   FontSize="13"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                        <Border Background="{DynamicResource AccentBrush}"
                                CornerRadius="16"
                                Width="30" Height="30">
                            <TextBlock x:Name="TxtUserInitial"
                                       Text="U"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Button>

                <Popup x:Name="UserMenuPopup"
                       Placement="BottomEdgeAlignedRight"
                       PlacementTarget="{Binding #BtnUserMenu}"
                       IsLightDismissEnabled="True">
                    <Border Background="{DynamicResource CardBackgroundBrush}"
                            CornerRadius="10"
                            BorderBrush="{DynamicResource BorderSubtleBrush}"
                            BorderThickness="1"
                            Padding="6"
                            MinWidth="200"
                            Margin="0,4,0,0">
                        <StackPanel Spacing="2">
                            <Button Background="Transparent"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="12,10"
                                    CornerRadius="6"
                                    Click="BtnToggleTheme_Click">
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <ui:SymbolIcon Symbol="DarkTheme" FontSize="16" Foreground="{DynamicResource TextTertiaryBrush}"/>
                                    <TextBlock x:Name="TxtThemeToggle" Text="Theme sombre" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </Button>
                            <Button Background="Transparent"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="12,10"
                                    CornerRadius="6"
                                    Click="BtnToggleLanguage_Click">
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <ui:SymbolIcon Symbol="Globe" FontSize="16" Foreground="{DynamicResource TextTertiaryBrush}"/>
                                    <TextBlock x:Name="TxtLanguageToggle" Text="English" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </Button>
                            <Border Background="{DynamicResource BorderSubtleBrush}" Height="1" Margin="6,4"/>
                            <Button Background="Transparent"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="12,10"
                                    CornerRadius="6"
                                    Click="BtnLogout_Click">
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <ui:SymbolIcon Symbol="Back" FontSize="16" Foreground="{DynamicResource DangerBrush}"/>
                                    <TextBlock x:Name="TxtLogout" Text="Deconnexion" FontSize="13" Foreground="{DynamicResource DangerBrush}"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>
                </Popup>
            </Grid>
        </Grid>

        <!-- Toggle tabs + Add button -->
        <Grid Grid.Row="1" Margin="0,20,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Segmented toggle -->
            <Border Grid.Column="0"
                    Background="{DynamicResource AppBackgroundBrush}"
                    CornerRadius="10"
                    Padding="4"
                    BorderBrush="{DynamicResource BorderSubtleBrush}"
                    BorderThickness="1">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <Button x:Name="BtnTabMine"
                            Padding="16,8"
                            CornerRadius="8"
                            FontWeight="SemiBold"
                            FontSize="13"
                            Click="BtnTabMine_Click">
                        <TextBlock x:Name="TxtTabMine" Text="Mes questionnaires"/>
                    </Button>
                    <Button x:Name="BtnTabPublished"
                            Padding="16,8"
                            CornerRadius="8"
                            FontSize="13"
                            Background="Transparent"
                            Click="BtnTabPublished_Click">
                        <TextBlock x:Name="TxtTabPublished" Text="Questionnaires publies"/>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Add button -->
            <Button x:Name="BtnAdd"
                    Grid.Column="2"
                    Padding="16,10"
                    CornerRadius="8"
                    Classes="accent"
                    Click="BtnAdd_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <ui:SymbolIcon Symbol="Add" FontSize="16"/>
                    <TextBlock x:Name="TxtBtnAdd" Text="Nouveau questionnaire" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Cards grid -->
        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid>
                <!-- Cards container -->
                <WrapPanel x:Name="CardsContainer"
                           Orientation="Horizontal"
                           HorizontalAlignment="Left"/>

                <!-- Empty state -->
                <StackPanel x:Name="EmptyState"
                            IsVisible="False"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="12">
                    <ui:SymbolIcon Symbol="Library"
                                   FontSize="48"
                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                   HorizontalAlignment="Center"
                                   Opacity="0.5"/>
                    <TextBlock x:Name="TxtEmptyState"
                               Text="Aucun questionnaire."
                               FontSize="16"
                               Foreground="{DynamicResource TextTertiaryBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>

</UserControl>
