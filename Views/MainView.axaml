<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             x:Class="StadiumCompany.Views.MainView">

    <Grid Margin="30,25,30,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <ui:SymbolIcon Symbol="Library"
                                   FontSize="28"
                                   Foreground="{DynamicResource AccentBrush}"/>
                    <TextBlock x:Name="TxtTitle"
                               Text="Questionnaires"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock x:Name="LblWelcome"
                           FontSize="14"
                           Foreground="{DynamicResource TextTertiaryBrush}"
                           Margin="40,6,0,0"/>
            </StackPanel>

            <!-- User menu (top-right) -->
            <Grid Grid.Column="1" VerticalAlignment="Center">
                <Button x:Name="BtnUserMenu"
                        Background="Transparent"
                        Foreground="{DynamicResource TextSecondaryBrush}"
                        Padding="14,5"
                        CornerRadius="10"
                        Click="BtnUserMenu_Click">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock x:Name="TxtUserName"
                                   Text="Utilisateur"
                                   FontSize="13"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                        <Border Background="{DynamicResource AccentBrush}"
                                CornerRadius="16"
                                Width="30" Height="30">
                            <TextBlock x:Name="TxtUserInitial"
                                       Text="U"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Button>

                <Popup x:Name="UserMenuPopup"
                       Placement="BottomEdgeAlignedRight"
                       PlacementTarget="{Binding #BtnUserMenu}"
                       IsLightDismissEnabled="True">
                    <Border Background="{DynamicResource CardBackgroundBrush}"
                            CornerRadius="10"
                            BorderBrush="{DynamicResource BorderSubtleBrush}"
                            BorderThickness="1"
                            Padding="6"
                            MinWidth="200"
                            Margin="0,4,0,0">
                        <StackPanel Spacing="2">
                            <Button Background="Transparent"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="12,10"
                                    CornerRadius="6"
                                    Click="BtnToggleTheme_Click">
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <ui:SymbolIcon Symbol="DarkTheme" FontSize="16" Foreground="{DynamicResource TextTertiaryBrush}"/>
                                    <TextBlock x:Name="TxtThemeToggle" Text="Theme sombre" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </Button>
                            <Button Background="Transparent"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="12,10"
                                    CornerRadius="6"
                                    Click="BtnToggleLanguage_Click">
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <ui:SymbolIcon Symbol="Globe" FontSize="16" Foreground="{DynamicResource TextTertiaryBrush}"/>
                                    <TextBlock x:Name="TxtLanguageToggle" Text="English" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </Button>
                            <Border Background="{DynamicResource BorderSubtleBrush}" Height="1" Margin="6,4"/>
                            <Button Background="Transparent"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="12,10"
                                    CornerRadius="6"
                                    Click="BtnLogout_Click">
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <ui:SymbolIcon Symbol="Back" FontSize="16" Foreground="{DynamicResource DangerBrush}"/>
                                    <TextBlock x:Name="TxtLogout" Text="Deconnexion" FontSize="13" Foreground="{DynamicResource DangerBrush}"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>
                </Popup>
            </Grid>
        </Grid>

            <!-- Add button -->
            <Button x:Name="BtnAdd"
                    Grid.Row="1"
                    HorizontalAlignment="Left"
                    Margin="0,25,0,20"
                    Padding="16,10"
                    CornerRadius="8"
                    Classes="accent"
                    Click="BtnAdd_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <ui:SymbolIcon Symbol="Add" FontSize="16"/>
                    <TextBlock x:Name="TxtBtnAdd" Text="Nouveau questionnaire" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>

            <!-- TabControl avec 2 onglets -->
            <TabControl Grid.Row="2" x:Name="TabMain">

                <!-- Onglet: Mes questionnaires -->
                <TabItem x:Name="TabMine" Header="Mes questionnaires">
                    <Grid Margin="0,10,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0"
                                Background="{DynamicResource CardBackgroundBrush}"
                                CornerRadius="12"
                                ClipToBounds="True">
                            <DataGrid x:Name="DgvMyQuestionnaires"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      CanUserReorderColumns="False"
                                      CanUserResizeColumns="True"
                                      SelectionMode="Single"
                                      GridLinesVisibility="Horizontal"
                                      BorderThickness="0"
                                      Background="Transparent">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Nom" Binding="{Binding Name}" Width="2*"/>
                                    <DataGridTextColumn Header="Theme" Binding="{Binding ThemeLabel}" Width="*"/>
                                    <DataGridTextColumn Header="Questions" Binding="{Binding QuestionCount}" Width="100"/>
                                    <DataGridTextColumn Header="Publie" Binding="{Binding PublishedText}" Width="80"/>
                                </DataGrid.Columns>
                                <DataGrid.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem x:Name="CtxMinePlay" Header="Jouer" Click="ContextMenu_PlayMine">
                                            <MenuItem.Icon>
                                                <ui:SymbolIcon Symbol="Play" FontSize="14"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem x:Name="CtxMineEdit" Header="Editer" Click="ContextMenu_Edit">
                                            <MenuItem.Icon>
                                                <ui:SymbolIcon Symbol="Edit" FontSize="14"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem x:Name="CtxMinePdf" Header="Synthese PDF" Click="ContextMenu_GeneratePdfMine">
                                            <MenuItem.Icon>
                                                <ui:SymbolIcon Symbol="Document" FontSize="14"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <Separator/>
                                        <MenuItem x:Name="CtxMineDelete" Header="Supprimer" Click="ContextMenu_Delete">
                                            <MenuItem.Icon>
                                                <ui:SymbolIcon Symbol="Delete" FontSize="14"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </ContextMenu>
                                </DataGrid.ContextMenu>
                            </DataGrid>
                        </Border>

                        <!-- Action bar for selected item -->
                        <Border x:Name="PnlMyActions"
                                Grid.Row="1"
                                IsVisible="False"
                                Background="{DynamicResource CardBackgroundBrush}"
                                CornerRadius="10"
                                Padding="12,8"
                                Margin="0,8,0,0"
                                BorderBrush="{DynamicResource BorderSubtleBrush}"
                                BorderThickness="1">
                            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                <Button Padding="14,8" CornerRadius="6" Classes="accent" Click="BtnActionPlay_Click">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <ui:SymbolIcon Symbol="Play" FontSize="14"/>
                                        <TextBlock x:Name="TxtActionPlay" Text="Jouer"/>
                                    </StackPanel>
                                </Button>
                                <Button Padding="14,8" CornerRadius="6" Click="BtnActionEdit_Click">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <ui:SymbolIcon Symbol="Edit" FontSize="14"/>
                                        <TextBlock x:Name="TxtActionEdit" Text="Editer"/>
                                    </StackPanel>
                                </Button>
                                <Button Padding="14,8" CornerRadius="6" Click="BtnActionPdf_Click">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <ui:SymbolIcon Symbol="Document" FontSize="14"/>
                                        <TextBlock x:Name="TxtActionPdf" Text="PDF"/>
                                    </StackPanel>
                                </Button>
                                <Button Padding="14,8" CornerRadius="6" Click="BtnActionDelete_Click">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <ui:SymbolIcon Symbol="Delete" FontSize="14" Foreground="{DynamicResource DangerBrush}"/>
                                        <TextBlock x:Name="TxtActionDelete" Text="Supprimer" Foreground="{DynamicResource DangerBrush}"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>
                </TabItem>

                <!-- Onglet: Questionnaires publies -->
                <TabItem x:Name="TabPublished" Header="Questionnaires publies">
                    <Grid Margin="0,10,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0"
                                Background="{DynamicResource CardBackgroundBrush}"
                                CornerRadius="12"
                                ClipToBounds="True">
                            <DataGrid x:Name="DgvPublishedQuestionnaires"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      CanUserReorderColumns="False"
                                      CanUserResizeColumns="True"
                                      SelectionMode="Single"
                                      GridLinesVisibility="Horizontal"
                                      BorderThickness="0"
                                      Background="Transparent">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Nom" Binding="{Binding Name}" Width="2*"/>
                                    <DataGridTextColumn Header="Theme" Binding="{Binding ThemeLabel}" Width="*"/>
                                    <DataGridTextColumn Header="Auteur" Binding="{Binding OwnerName}" Width="*"/>
                                    <DataGridTextColumn Header="Questions" Binding="{Binding QuestionCount}" Width="100"/>
                                </DataGrid.Columns>
                                <DataGrid.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem x:Name="CtxPubPlay" Header="Jouer" Click="ContextMenu_Play">
                                            <MenuItem.Icon>
                                                <ui:SymbolIcon Symbol="Play" FontSize="14"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem x:Name="CtxPubView" Header="Voir" Click="ContextMenu_View">
                                            <MenuItem.Icon>
                                                <ui:SymbolIcon Symbol="View" FontSize="14"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem x:Name="CtxPubFork" Header="Dupliquer" Click="ContextMenu_Fork">
                                            <MenuItem.Icon>
                                                <ui:SymbolIcon Symbol="Copy" FontSize="14"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <Separator/>
                                        <MenuItem x:Name="CtxPubPdf" Header="Synthese PDF" Click="ContextMenu_GeneratePdf">
                                            <MenuItem.Icon>
                                                <ui:SymbolIcon Symbol="Document" FontSize="14"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </ContextMenu>
                                </DataGrid.ContextMenu>
                            </DataGrid>
                        </Border>

                        <!-- Action bar for selected published item -->
                        <Border x:Name="PnlPubActions"
                                Grid.Row="1"
                                IsVisible="False"
                                Background="{DynamicResource CardBackgroundBrush}"
                                CornerRadius="10"
                                Padding="12,8"
                                Margin="0,8,0,0"
                                BorderBrush="{DynamicResource BorderSubtleBrush}"
                                BorderThickness="1">
                            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                <Button Padding="14,8" CornerRadius="6" Classes="accent" Click="BtnActionPlayPub_Click">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <ui:SymbolIcon Symbol="Play" FontSize="14"/>
                                        <TextBlock x:Name="TxtActionPlayPub" Text="Jouer"/>
                                    </StackPanel>
                                </Button>
                                <Button Padding="14,8" CornerRadius="6" Click="BtnActionViewPub_Click">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <ui:SymbolIcon Symbol="View" FontSize="14"/>
                                        <TextBlock x:Name="TxtActionView" Text="Voir"/>
                                    </StackPanel>
                                </Button>
                                <Button Padding="14,8" CornerRadius="6" Click="BtnActionForkPub_Click">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <ui:SymbolIcon Symbol="Copy" FontSize="14"/>
                                        <TextBlock x:Name="TxtActionFork" Text="Dupliquer"/>
                                    </StackPanel>
                                </Button>
                                <Button Padding="14,8" CornerRadius="6" Click="BtnActionPdfPub_Click">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <ui:SymbolIcon Symbol="Document" FontSize="14"/>
                                        <TextBlock x:Name="TxtActionPdfPub" Text="PDF"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>
                </TabItem>

            </TabControl>
    </Grid>

</UserControl>
